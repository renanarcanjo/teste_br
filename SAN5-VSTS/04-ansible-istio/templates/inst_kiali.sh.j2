#!/bin/bash
#
KIALI_USERNAME=$(echo -n "{{ user_kiali }}" | base64)
KIALI_PASSPHRASE=$(echo -n "{{ pass_kiali }}" | base64)

cat <<EOF | kubectl apply -f -
apiVersion: v1
kind: Secret
metadata:
  name: kiali
  namespace: {{ namespace_kiali }}
  labels:
    app: kiali
type: Opaque
data:
  username: $KIALI_USERNAME
  passphrase: $KIALI_PASSPHRASE
EOF
